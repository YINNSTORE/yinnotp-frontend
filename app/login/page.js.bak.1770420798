"use client"

import { useEffect, useMemo, useState } from "react"
import toast, { Toaster } from "react-hot-toast"
import "./login.css"

const TTL_12H = 12 * 60 * 60 * 1000

function readLastSession() {
  try {
    const raw = localStorage.getItem("yinnotp:last_session") || localStorage.getItem("yinnotp:last_login")
    if (!raw) return null
    const obj = JSON.parse(raw)
    const ts = Number(obj?.ts || obj?.time || 0)
    if (!ts) return null
    if (Date.now() - ts > TTL_12H) {
      localStorage.removeItem("yinnotp:last_session")
      localStorage.removeItem("yinnotp:last_login")
      return null
    }
    if (!obj?.username || !obj?.email) return null
    return { username: obj.username, email: obj.email, ts }
  } catch {
    try {
      localStorage.removeItem("yinnotp:last_session")
      localStorage.removeItem("yinnotp:last_login")
    } catch {}
    return null
  }
}

export default function LoginPage() {
  const [showPwd, setShowPwd] = useState(false)
  const [loading, setLoading] = useState(false)
  const [last, setLast] = useState(null)

  const [form, setForm] = useState({
    ident: "",
    password: "",
    remember: true
  })

  useEffect(() => {
    setLast(readLastSession())
  }, [])

  const canSubmit = useMemo(() => {
    return form.ident.trim().length > 0 && form.password.length > 0 && !loading
  }, [form, loading])

  async function onSubmit(e) {
    e.preventDefault()
    if (!canSubmit) {
      toast.error("Lengkapi username/email & password", { position: "top-right" })
      return
    }
    setLoading(true)
    try {
      const r = await fetch("/api/auth/login", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({ ident: form.ident, password: form.password, remember: form.remember })
      })
      const j = await r.json().catch(() => ({}))

      if (!r.ok || !j.ok) {
        toast.error(j?.message || "Login gagal", { position: "top-right" })
        setLoading(false)
        return
      }

      // simpan session tampilan "Masuk sebagai ..." (TTL 12 jam)
      const payload = {
        username: j.data?.username || form.ident,
        email: j.data?.email || "",
        ts: Date.now()
      }
      localStorage.setItem("yinnotp:last_session", JSON.stringify(payload))
      localStorage.setItem("yinnotp:last_login", JSON.stringify(payload))

      toast.success("Login sukses", { position: "top-right" })
      window.location.href = "/"
    } catch {
      toast.error("Server error / koneksi putus", { position: "top-right" })
    } finally {
      setLoading(false)
    }
  }

  function clickSaved() {
    const s = readLastSession()
    if (!s) {
      toast.error("Belum ada sesi login, silakan Sign in", { position: "top-right" })
      setLast(null)
      return
    }
    // bukan auto-isi, tapi sekedar quick hint (kalau lu mau nanti bisa auto-login pake token)
    toast.success(`Sesi ditemukan: ${s.username}`, { position: "top-right" })
  }

  return (
    <div className="login-wrap">
      <Toaster
        position="top-right"
        toastOptions={{
          duration: 2200,
          style: { maxWidth: 320 }
        }}
      />

      <div className="dots-decoration dots-top-right"></div>
      <div className="dots-decoration dots-bottom-left"></div>

      <div className="login-card">
        <div className="logo-container">
          <div className="logo-placeholder">â˜„ð”“Ž</div>
        </div>

        <h2>Welcome back! ðŸ‘‹</h2>
        <p className="subtitle">Please sign-in to your account to view the dashboard</p>

        <div className="social-buttons">
          <button
            type="button"
            className="btn-social"
            onClick={() => toast("Google login coming soon", { position: "top-right" })}
          >
            <img
              src="https://www.gstatic.com/images/branding/product/1x/googleg_48dp.png"
              width="18"
              alt="Google"
            />
            Google
          </button>
          <button
            type="button"
            className="btn-social"
            onClick={() => toast("GitHub login coming soon", { position: "top-right" })}
          >
            <i className="fab fa-github"></i>
            GitHub
          </button>
        </div>

        <div className="saved-account" onClick={clickSaved} role="button">
          <div className="account-info">
            <div className="avatar">{String(last?.username || "T").slice(0, 1).toUpperCase()}</div>
            <div className="account-details">
              <p>Masuk sebagai {last?.username || "-"}</p>
              <span>{last?.email || "Belum ada sesi (klik untuk info)"}</span>
            </div>
          </div>
          <span style={{ fontSize: 22, fontWeight: 900, color: "var(--navy-dark)" }}>â˜„</span>
        </div>

        <div className="divider">or continue with email</div>

        <form onSubmit={onSubmit}>
          <div className="form-group">
            <div className="input-wrapper">
              <i className="fa-regular fa-user prefix"></i>
              <input
                type="text"
                placeholder="Username or email"
                value={form.ident}
                onChange={(e) => setForm((v) => ({ ...v, ident: e.target.value }))}
                required
              />
            </div>
          </div>

          <div className="form-group">
            <div className="input-wrapper">
              <i className="fa-solid fa-lock prefix"></i>
              <input
                type={showPwd ? "text" : "password"}
                placeholder="Password"
                value={form.password}
                onChange={(e) => setForm((v) => ({ ...v, password: e.target.value }))}
                required
              />
              <i
                className={`fa-regular ${showPwd ? "fa-eye" : "fa-eye-slash"} suffix`}
                onClick={() => setShowPwd((s) => !s)}
              ></i>
            </div>
          </div>

          <div className="form-options">
            <label className="remember-me">
              <input
                type="checkbox"
                checked={form.remember}
                onChange={(e) => setForm((v) => ({ ...v, remember: e.target.checked }))}
              />
              Remember Me
            </label>
            <a href="#" className="forgot-pass" onClick={(e)=>{e.preventDefault(); toast("Coming soon", {position:"top-right"})}}>
              Forgot Password?
            </a>
          </div>

          <button type="submit" className="btn-submit" disabled={!canSubmit}>
            {loading ? "Memproses..." : "Masuk"}
          </button>
        </form>

        <p className="footer-text">
          New on our platform? <a href="/register">Create an account</a>
        </p>
      </div>
    </div>
  )
}
